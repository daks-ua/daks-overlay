start() {
	ebegin "Starting HARDLOCK daemon"
	eval start-stop-daemon --start --quiet --exec /opt/sbin/aksusbd -- ${AKSUSBD_ARGS}
	eend $?
}

stop() {
	ebegin "Stopping HARDLOCK daemon"
	start-stop-daemon --stop --quiet --exec /opt/sbin/aksusbd
	eend $?
}
