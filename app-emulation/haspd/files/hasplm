depend () {
    need net
    after aksusbd
}

start() {
	ebegin "Starting HASP License manager"
	eval start-stop-daemon --start --quiet --exec /opt/sbin/hasplm -- ${HASPLM_ARGS}
	eend $?
}

stop() {
	ebegin "Stopping HASP License manager"
	start-stop-daemon --stop --quiet --exec /opt/sbin/hasplm
	eend $?
}
