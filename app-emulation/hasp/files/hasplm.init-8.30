depend () {
    need net
    after aksusbd
}

start() {
	ebegin "Starting HASP License manager"
	eval start-stop-daemon --start --quiet --pidfile /var/run/hasplm.pid --exec /usr/sbin/hasplm -- ${HASPLM_ARGS}
	eend $?
}

stop() {
	ebegin "Stopping HASP License manager"
	start-stop-daemon --stop --quiet --pidfile /var/run/hasplm.pid --exec /usr/sbin/hasplm
	eend $?
}
